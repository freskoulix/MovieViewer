.movie-image-container
  display inline-block
  width 100px
  margin-bottom 10px
  float left
  position relative
  transition: all 0.5s ease;

  &.big
    width 100%

    .movie-image-overlay
      padding-top 525px
      font-size 26px

      .movie-image-overlay-description
        font-size 20px

  .movie-image-overlay
    visibility hidden
    position absolute
    width 100%
    height 100%
    padding-top 65px
    z-index 5
    text-align center
    font-size 16px
    color #fff
    cursor pointer

    .movie-image-overlay-description
      font-size 10px

  &:hover
    .movie-image-overlay
      visibility visible

  .movie-image
    width 100%

.movie-info-container
  display inline-block
  width calc(100% - 150px)
  padding 0 10px
  font-size 15px

  .movie-info
    margin-bottom 5px

    em
      font-size: 12px

    .movie-info-col
      margin-right 5px

  .movie-info-image
    height 20px
    margin-right 10px
