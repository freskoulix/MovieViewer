@import '../../../styles'

moviesListBorder()
  2px solid baseColor

.movies-list-container
  margin 100px 0 20px

  .movie-container
    border moviesListBorder()
    border-bottom none
    padding 10px

    &:last-child
      border-bottom moviesListBorder()

    &:hover
      color lightColor
      background-color baseColor

    .movie-button
      display block
      width 100%
      height 100%
      color lightColor
      text-decoration none

    .movie-row.show
      display: inline-block
