moviesListBorder()
  2px solid #333

.movies-list-container
  margin 100px 0 20px

  .movie-container
    border moviesListBorder()
    border-bottom none
    padding 10px

    &:last-child
      border-bottom moviesListBorder()

    &:hover
      color #fff
      background-color #333

    .movie-button
      display block
      width 100%
      height 100%
      text-decoration none

    .movie-row.show
      display: inline-block
